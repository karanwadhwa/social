doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Social | Register
    // Tell the browser to be responsive to screen width
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    // Bootstrap 3.3.7
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    // Font Awesome
    link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
    // Ionicons
    link(rel='stylesheet', href='/bower_components/Ionicons/css/ionicons.min.css')
    // Google Font
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700,800,900')
    // Select2 css cdn
    link(href='/dist/css/select2.css', rel='stylesheet')
    // admin-lte Theme style
    link(rel='stylesheet', href='/dist/css/AdminLTE.css')
    // custom css
    link(rel='stylesheet', href='/dist/css/styles.css')




  body.hold-transition.register-page
    if errors
      script( console.log(errors);)
      .message
        div(class = 'alert alert-dismissible alert-danger')
          button.close(type='button', data-dismiss='alert', aria-hidden='true') Ã—
          h4
            i.icon.fa.fa-warning
            | Error!
          |  #{errors[0].msg}

    .register-box.flex-container-reg
      .register-logo
          b #{title}
          | Register

      .register-box-body
        p.login-box-msg
        form(action='/auth/register', method='POST')
          .form-group.has-feedback
            input.form-control(type='text' placeholder='First Name' name='fname' required)
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text' placeholder='Last Name' name='lname' required)
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='email' placeholder='Email' name='email' required)
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='number' placeholder='Registration No.' name='reg' required)
            span.glyphicon.glyphicon-tag.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password' placeholder='Password' name='password' required)
            span.glyphicon.glyphicon-lock.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password' placeholder='Confirm Password' name='password2' required)
            span.glyphicon.glyphicon-log-in.form-control-feedback
          .form-group
            select.form-control.select2(style='width: 100%;' name='branch' required)
              option(value='' disabled selected) Branch
              option(value='computers') Computers
              option(value='it') Information Technology
              option(value='electronics') Electronics
              option(value='extc') Electronics and Telecommunication
              option(value='na') NA
          .form-group
            select.form-control.select2(style='width: 100%;' name='type' required)
              option(value='' disabled selected) User Type
              option(value='student') Student
              option(value='professor') Professor
              option(value='staff') Staff
          .form-group
            select.form-control.select2-multiple-tags(multiple='multiple', data-placeholder='Tags', style='width: 100%;' name='tags')
              option(value='admin') Admin
              option(value='moderator') Moderator
              option(value='hod') H.O.D
              option(value='cr') C.R
              option(value='student_council') Student Council
              option(value='ieee') IEEE Member
              option(value='csi') CSI Member
              option(value='iste') ISTE Member
              option(value='ecell') E-Cell
              option(value='exam_section') Exam Section
              option(value='office') Office Staff
          button.btn.btn-primary.btn-block.btn-flat(type='submit') Register

        br
        p Have an Account? &nbsp
          a.text-center(href='/auth/login') Login

    // jQuery 3
    script(src='/bower_components/jquery/dist/jquery.min.js')
    // Bootstrap 3.3.7
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    // AdminLTE script
    script(src='/bower_components/dist/js/adminlte.js')
    // Select2 js cdn
    script(src='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js')
    // Custom js
    script(src='/dist/js/index.js')

