extends layout

block content
  each post, i in posts
    .row.grid
      .col-xs-0.col-sm-0.col-md-0.col-lg-1.col-xl-2.grid-item
      .col-xs-12.col-sm-12.col-md-12.col-lg-10.col-xl-8.grid-item
        .box.box-widget
          .box-header.with-border
            .user-block
              img.img-circle(src=post.author.dpURL, alt='Post Image')
              span.username
                a(href='#') #{post.author.name}
              span.description
                | #{post.date.toLocaleString('en-US', {hour:'numeric', minute:'numeric', hour12:true})}
                | on #{post.date.toLocaleString('en-US', {year: 'numeric', month: 'short', day: 'numeric' })}
                br
                | Audience: #{post.audience}
            // /.user-block
          // /.box-header
          .box-body(style='position:relative;')
            a(href=`/posts/${post._id}`)
              span(style='position:absolute; width:100%; height:100%; top:0; left: 0; z-index: 1;')
            if post.title
              span(style='text-align: center; font-size: 22px; font-weight: 600;') #{post.title}
            if postImg
              img.img-responsive.pad(src=postImg, alt=null)
            .post-body
              | #{post.body}
            button.btn.btn-default.btn-xs(type='button')
              i.fa.fa-thumbs-o-up
              |  Like
            span.pull-right.text-muted
              | 127 likes   3 comments
          // /.box-body
      .col-xs-0.col-sm-0.col-md-0.col-lg-1.col-xl-2.grid-item

